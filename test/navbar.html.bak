    .menu-toggle {
        display: none;
        font-size: 24px;
        color: white;
        cursor: pointer;
    }

    /* Documenter css tweaks */
    .docs-sidebar {
        margin-top: 60px;
        padding-top: calc(var(--navbar-height) + -3rem) !important;
    }

    #documenter {
        margin-top: 60px;
    }

    /* Responsive styling */
    @media (max-width: 768px) {
        .nav-links {
            display: none;
            flex-direction: column;
            width: 100%;
            background-color: #073c44;
            position: absolute;
            top: 60px;
            left: 0;
            padding: 10px 0;
        }

        .nav-links.show {
            display: flex;
        }

        .nav-links li {
            margin: 10px 0;
            text-align: center;
